<p style="color: green"><%= notice %></p>

<table>
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Sigla</th>
        <th>Imagem</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <%= render @coin %>
      </tr>
    </tbody>
</table>

<div>
  <%= link_to "Editar moeda", edit_coin_path(@coin) %> |
  <%= link_to "Voltar para moedas", coins_path %>
  <p> <%= button_to "Destruir moeda", @coin, method: :delete, data: { confirm: "Tem certeza?" } %> </p>
</div>
