<p style="color: green"><%= notice %></p>

<form>
  <div class="mb-3">
    <%= label_tag nil, @mining_type.class.human_attribute_name(:description) %>
    <%= text_field_tag nil, @mining_type.description, class:"form-control", disabled:true %>
  </div>

  <div class="mb-3">
    <%= label_tag nil, @mining_type.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @mining_type.acronym, class:"form-control", disabled:true %>
  </div>
</form>

<div>
  <%= link_to t("links.edit"), edit_mining_type_path(@mining_type), class:"btn btn-primary" %>
  <%= link_to t("links.delete"), @mining_type, data: {turbo_method: :delete, turbo_confirm: t("messages.confirm")}, class:"btn btn-primary" %>

  <br>
  <br>

  <p> <%= link_to t("links.back"), mining_types_path, class:"btn btn-primary" %> </p>
</div>